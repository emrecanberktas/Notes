{
  "manifest_version": 3,
  "name": "Page Notes",
  "version": "1.0.0",
  "description": "Highlight text and add notes on any webpage",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
